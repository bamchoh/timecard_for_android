<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical" android:id="@+id/timecard">

        <TextView
                style="@style/CodeFont"
                android:paddingTop="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/state" android:layout_weight="1"
                android:textSize="16sp"/>
        <TextView
                style="@style/CodeFont"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/time_of_day" android:layout_weight="1"
                android:textSize="28sp"/>
        <TextView
                style="@style/CodeFont"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/date" android:layout_weight="1"
                android:textSize="16sp"/>
</LinearLayout>
